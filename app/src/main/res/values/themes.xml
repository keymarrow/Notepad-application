<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Notepadapp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="textview">
        <item name="fontFamily">@font/josefinsans_bold</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textSize">@dimen/_20ssp</item>
        <item name="android:text">@string/my_note</item>
    </style>

    <style name="background">
        <item name="background">@color/colorSecondary</item>
    </style>

    <style name="noteTextview">
        <item name="fontFamily">@font/josefinsans_bold</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:imeOptions">actionDone</item>
        <item name="android:inputType">text</item>
        <item name="android:background">@null</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/_16ssp</item>
        <item name="hintTextColor">@color/colorTextHint</item>
        <item name="android:hint">@string/note_tittle</item>
    </style>

    <style name="inputNoteStyle">
        <item name="android:background">@drawable/background_input_field_dark</item>
        <item name="android:fontFamily">@font/josefinsans_regular</item>
        <item name="android:gravity">top</item>
        <item name="android:hint">@string/type_note_here</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:inputType">text</item>
        <item name="android:minHeight">@dimen/_100ssp</item>
        <item name="android:paddingTop">@dimen/_5ssp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/colorMiscellaneousBackground</item>
        <item name="android:textSize">@dimen/_16ssp</item>
    </style>
</resources>